<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.jdjt.mangrove.activity.CallServiceActivity">

    <LinearLayout
        android:id="@+id/layout_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_12"
                android:layout_weight="1"
                android:background="@drawable/name_edit"
                android:inputType="text"

                android:gravity="center_vertical"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_32"
                android:textColorHint="@color/custom_background_disabled">

            </EditText>

            <Button
                android:id="@+id/btn_send"
                style="@style/App_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:text="发送" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="请输入需要服务的内容，以便服务员接单谢谢合作，祝你入住愉快！"
            android:textColor="@color/text_gray_lable"
            android:textSize="@dimen/textsize_30" />

        <TextView
            android:id="@+id/text_task_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/head_remind_bg"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/textsize_32"
            android:text="00:00:00" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cec6c7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_msg_content"
        android:layout_above="@+id/layout_buttom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/text_call_content_lable"
            android:textSize="@dimen/textsize_24" />

        <TextView
            android:id="@+id/text_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/set_text_bg"
            android:padding="10dp"
            android:text="你好，我需要打扫房间"
            android:textSize="@dimen/textsize_32" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_msg_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/text_call_region"
                android:textSize="@dimen/textsize_24" />

            <TextView
                android:id="@+id/text_msg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2017.04.17 10:10"
                android:textColor="@color/head_remind_bg"
                android:textSize="@dimen/textsize_24" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
