<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <!--~~~~~~~~~~~登录~~~~~~~~~~~~~~~-->
    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/phonenumber"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_gray_lable" />

            <EditText
                android:id="@+id/room_number_etv"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:hint="请输入房间号   如11106"
                android:inputType="phone"
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/line_color_in" />

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/password"
                android:layout_width="40dp"
                android:layout_marginLeft="18dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/idcard_number_etv"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入入住人证件后四位"
                android:inputType="textPassword"
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="right"
            android:background="@color/line_color_out" />
    </LinearLayout>


    <Button
        android:id="@+id/bind_button"
        style="@style/AppBtn"
        android:text="绑       定"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/login_findpwd_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:text="温馨提示：请连接酒店WiFi，方便服务员找到您的具体位置"
        android:textColor="@color/app_theme_color"
        android:textSize="@dimen/textsize_28" />

</LinearLayout>