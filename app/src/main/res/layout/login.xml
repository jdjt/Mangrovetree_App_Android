<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


	<!--~~~~~~~~~~~登录~~~~~~~~~~~~~~~-->
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/white"
	    >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="58dp"
	        android:orientation="horizontal"
	        >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dp"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_gray_lable"
	            />
	         <EditText
	            android:id="@+id/login_account"
	            android:layout_width="match_parent"
	            android:layout_height="58dp"
	            android:hint="手机号"
	            android:textSize="@dimen/textsize_30"
	            android:textColorHint="@color/line_color_out"
	            android:layout_marginLeft="14dp"
	            android:textColor="@color/text_gray_lable"
	            android:background="@null"
	            android:singleLine="true"
	             />
	    </LinearLayout>


		<View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_color_in"
		    android:layout_marginLeft="18dp"
		    />

		 <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="58dp"
	        android:orientation="horizontal">

			<ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_marginLeft="18dp"
		        android:layout_gravity="center_vertical" />
	        <EditText
	            android:id="@+id/login_password"
	            android:layout_width="321dp"
	            android:layout_height="58dp"
	            android:hint="6-18位密码"
	           android:textSize="@dimen/textsize_30"
	            android:textColorHint="@color/line_color_out"
	            android:layout_marginLeft="14dp"
	           android:textColor="@color/text_gray_lable"
	            android:background="@null"
	            android:inputType="textPassword"
	            android:singleLine="true" />
			 <!--控制显示隐藏密码的眼睛-->
			 <ImageView
				 android:id="@+id/password_visible"
				 android:layout_width="20dp"
				 android:layout_height="20dp"
				 android:layout_gravity="center"
				 android:background="@drawable/button_pressed"/>

	     </LinearLayout>

		<View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_color_out" />
		</LinearLayout>

	<Button
		android:id="@+id/login_findpwd_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/common_bg"
		android:text="忘记密码？"
		android:textColor="@color/green"
		android:layout_gravity="right"
		android:textSize="@dimen/textsize_26" />
        <Button
            android:id="@+id/login_button"
            style="@style/AppBtn"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:text="登  录" />

</LinearLayout>