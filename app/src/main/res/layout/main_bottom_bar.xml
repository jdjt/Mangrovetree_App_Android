<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_bg_1"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="我的位置"
            android:textSize="@dimen/t_l"/>
        <TextView
            android:id="@+id/current_location_text"
            android:layout_below="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_text_color_2"
            android:text="大王棕酒店"
            android:textSize="@dimen/t_s"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/app_theme_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/main_bottom_bar"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/search_dest_btn"
            android:padding="3dp"
            android:background="@drawable/my_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/search_destination_normal"
                android:textColor="@color/app_theme_color"
                android:textSize="12dp"
                android:text="去哪"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/globle_plateform_btn"
            android:padding="3dp"
            android:background="@drawable/my_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/holiday_plateform_normal"
                android:textColor="@color/app_theme_color"
                android:textSize="12dp"
                android:text="全球度假平台"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call_service_btn"
            android:padding="3dp"
            android:background="@drawable/my_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/call_center_normal"
                android:textColor="@color/app_theme_color"
                android:textSize="12dp"
                android:text="呼叫服务"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>