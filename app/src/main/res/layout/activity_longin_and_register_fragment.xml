<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg"
    tools:context="com.jdjt.mangrove.activity.login.LonginAndRegisterFragmentActivity">


<RadioGroup
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/radioGroup">
    <RadioButton
        android:id="@+id/login_button"
        style="@style/tab_style"
        android:checked="true"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="登录"
        android:background="@drawable/radiobutton_left_off"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <RadioButton
        android:id="@+id/register_button"
        style="@style/tab_style"
        android:layout_width="match_parent"
        android:text="注册"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/radiobutton_off"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    </RadioGroup>
    <fragment
        android:id="@+id/login_register_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />
</RelativeLayout>
