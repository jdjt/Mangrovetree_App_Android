<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
   <!-- ++++++++修改登录+++++++++++++++++++++++++++++++++++++ -->
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/white"
        >
	       <LinearLayout 
		       android:layout_width="match_parent"
		       android:layout_height="58dp"
		       android:orientation="horizontal"
	        >
	       
	       <TextView
	            android:id="@+id/password_old_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dp"
	            android:textSize="@dimen/textsize_30"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_gray_lable"
	            android:text="原账户密码" 
	            />
	       <EditText
	            android:id="@+id/password_old"
	            android:layout_width="match_parent"
	            android:layout_height="58dp"
	            android:layout_weight="1"
	            android:hint="6-18位数字或者字母"
	            android:textSize="@dimen/textsize_30"
	            android:layout_marginLeft="14dp"
	            android:textColorHint="@color/line_color_out"
	            android:textColor="@color/text_gray_lable"
	            android:background="@null"
	            android:singleLine="true"
	            android:inputType="textPassword"/>

			</LinearLayout>
			<View android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/line_color_in"
			    android:layout_marginLeft="18dp"/>
	       <LinearLayout 
		       android:layout_width="match_parent"
		       android:layout_height="58dp"
		       android:orientation="horizontal"
	        >
	         <TextView
	            android:id="@+id/password_new_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dp"
	            android:textSize="@dimen/textsize_30"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_gray_lable"
	            android:text="新账户密码" />
	        <EditText
	            android:id="@+id/password_new"
	            android:layout_width="match_parent"
	            android:layout_height="58dp"
	            android:layout_weight="1"
	            android:hint="6-18位数字或者字母"
	            android:textSize="@dimen/textsize_30"
	            android:layout_marginLeft="14dp"
	            android:textColorHint="@color/line_color_out"
	            android:textColor="@color/text_gray_lable"
	            android:background="@null"
	            android:singleLine="true"
	            android:inputType="textPassword"/>

			</LinearLayout>
			<View android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/line_color_in"
			    android:layout_marginLeft="18dp"/>
	     <LinearLayout 
		       android:layout_width="match_parent"
		       android:layout_height="58dp"
		       android:orientation="horizontal"
	        >
	        <TextView
	            android:id="@+id/password_confirm_tv"
      			android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dp"
	            android:textSize="@dimen/textsize_30"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_gray_lable"
	            android:text="确认新密码" />          
	        <EditText
	            android:id="@+id/password_new_confirm"
	            android:layout_width="match_parent"
	            android:layout_height="58dp"
	            android:layout_weight="1"
	            android:hint="6-18位数字或者字母"
	            android:textSize="@dimen/textsize_30"
	            android:layout_marginLeft="14dp"
	            android:textColorHint="@color/line_color_out"
	            android:textColor="@color/text_gray_lable"
	            android:background="@null"
	            android:singleLine="true"
	            android:inputType="textPassword"
	            />
         
		 </LinearLayout>
		 
	     <View android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/line_color_out"/>
	</LinearLayout>

     <Button
          android:id="@+id/password_submit_btn"
		  style="@style/AppBtn"
          android:layout_width="match_parent"
          android:layout_marginTop="41dp"
          android:text="提  交"/>

</LinearLayout>
