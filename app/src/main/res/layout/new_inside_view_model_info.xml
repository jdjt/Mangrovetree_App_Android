<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
             <!--title-->
            <RelativeLayout
                android:id="@+id/panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/combo_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/default_image" />

                <TextView
                    android:id="@+id/combo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/group_open_icon"
                    android:layout_toRightOf="@+id/combo_image"
                    android:text="行动书屋"
                    android:textColor="@color/location_text_color"
                    android:textSize="@dimen/t_l" />

                <TextView
                    android:id="@+id/group_open_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="2dp"
                    android:background="@mipmap/arrow_up" />

                <TextView
                    android:id="@+id/combo_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_open_icon"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/combo_image"
                    android:text="皇后棕是度假世界的标志性酒店，拥有购物街，红树林平价奢侈品中心，数家特色餐厅，今日X书屋，皇后棕酒店还拥有女士楼层。"
                    android:textSize="@dimen/t_s" />

            </RelativeLayout>

            <!--显示详情的布局-->
            <LinearLayout
                android:id="@+id/content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/fm_half_white"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="10分钟"
                        android:textColor="#333333"
                        android:id="@+id/fm_navi_need_time"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:text="5000米"
                        android:id="@+id/fm_navi_need_distance"
                        android:layout_toRightOf="@+id/fm_navi_need_time"
                        android:layout_marginLeft="12dp"
                        android:textColor="#999999"
                        android:layout_alignBottom="@+id/fm_navi_need_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

                    <TextView
                        android:text="燃烧7000卡路里"
                        android:id="@+id/fm_navi_need_calorie"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/fm_calorie"
                        android:drawablePadding="5dp"
                        android:textColor="#de5656"
                        android:textSize="14sp"
                        android:layout_alignBottom="@+id/fm_navi_need_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fm_navi_start"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@mipmap/fm_w_start"
                        android:gravity="center_vertical"
                        android:text="我的位置"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:drawablePadding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>

                    <TextView
                        android:id="@+id/fm_navi_end"
                        android:layout_below="@+id/fm_navi_start"
                        android:layout_marginLeft="8dp"
                        android:text="终点"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/fm_w_end"
                        android:drawablePadding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>

                    <TextView
                        android:id="@+id/fm_open_navi_big"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/start_navi_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/bg_gray"
                    android:layout_height="0.1dp"/>

            </LinearLayout>

        </LinearLayout>
</RelativeLayout>