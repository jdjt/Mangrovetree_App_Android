<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- ~~~~~~~~~~~~~~~~忘记密码的重置密码（页面2）~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/find_login_password_layout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="登录密码"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_30" />

            <EditText
                android:id="@+id/find_login_password"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30">

            </EditText>

        </LinearLayout>

        <View
            android:layout_width="319dp"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:background="@color/line_color_in" />

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="原手机号"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_30" />

            <EditText
                android:id="@+id/find_account"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30">

            </EditText>

            <Button
                android:id="@+id/find_validation"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/setbtn_bg"
                android:clickable="true"
                android:text="发送验证"
                android:textColor="@drawable/text_state_whitetogreen"
                android:textSize="@dimen/textsize_28" />

        </LinearLayout>

        <View
            android:layout_width="319dp"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:background="@color/line_color_in" />

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="验证码"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_30" />


            <EditText
                android:id="@+id/find_security_code"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="6位数字"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30" />

        </LinearLayout>

        <View
            android:layout_width="319dp"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:background="@color/line_color_out"
            android:layout_weight="0.01" />
    </LinearLayout>

    <Button
        android:id="@+id/find_next_button"
        style="@style/AppBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="41dp"
        android:text="下 一 步" />

</LinearLayout>
