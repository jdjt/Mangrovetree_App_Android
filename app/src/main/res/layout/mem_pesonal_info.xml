<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_actionbar"/>

    <!--  个人中心-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- +++++++个人资料+++++++++++++++++++++++++++++++++++++++ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/personal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="姓名"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <TextView
                        android:id="@+id/personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_color_green"
                        android:textSize="@dimen/textsize_30" />
                    <ImageView
                        android:id="@+id/account_tel_turn"
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/line_color_in" />

                <LinearLayout
                    android:id="@+id/account_tel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="手机号"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <TextView
                        android:id="@+id/personal_telphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_color_green"
                        android:textSize="@dimen/textsize_30" />

                    <ImageView
                        android:id="@+id/account_tel_turn"
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/line_color_in" />

                <LinearLayout
                    android:id="@+id/account_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:text="密码"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <ImageView
                        android:id="@+id/account_email_turn"
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color_out" />

            </LinearLayout>


            <!--<Button-->
                <!--android:id="@+id/person_submit_btn"-->
                <!--style="@style/AppBtn"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginTop="41dp"-->
                <!--android:text="完 成" />-->
            <!--&lt;!&ndash; 注销 &ndash;&gt;-->

            <!--<Button-->
                <!--android:id="@+id/account_logout"-->
                <!--style="@style/AppBtn"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginBottom="85dp"-->
                <!--android:layout_marginTop="50dp"-->
                <!--android:text="注  销"-->
                <!--android:visibility="visible" />-->


        </LinearLayout>


    </ScrollView>
</LinearLayout>
