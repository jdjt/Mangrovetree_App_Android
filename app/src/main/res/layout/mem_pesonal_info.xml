<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--  个人中心-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- +++++++个人资料+++++++++++++++++++++++++++++++++++++++ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/ll_personal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="姓名"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <TextView
                        android:id="@+id/tv_personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:paddingLeft="40dp"
                        android:text=""
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/textsize_30" />

                    <ImageView
                        android:id="@+id/im_account_tel_turn"
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="42dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/line_color_in" />

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/ll_account_tel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="手机号"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <TextView
                        android:id="@+id/tv_personal_telphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:paddingLeft="40dp"
                        android:text=""
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/textsize_30" />

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="42dp"
                    android:background="@color/line_color_in" />

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/ll_account_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:text="修改登录密码"
                        android:textColor="@color/text_gray_lable"
                        android:textSize="@dimen/textsize_30" />

                    <ImageView
                        android:id="@+id/im_account_email_turn"
                        android:layout_width="43dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_right_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="42dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/line_color_in" />

            </LinearLayout>


            <!--<Button-->
            <!--android:id="@+id/person_submit_btn"-->
            <!--style="@style/AppBtn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginTop="41dp"-->
            <!--android:text="完 成" />-->
            <!--&lt;!&ndash; 注销 &ndash;&gt;-->




        </LinearLayout>


    </ScrollView>
</LinearLayout>
