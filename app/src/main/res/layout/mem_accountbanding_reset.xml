<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">
    <!-- +++++++更换手机号+++++++++++++++++++++++++++++++++++++++ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="52dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/banding_telemail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="新手机号"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_30" />

            <EditText
                android:id="@+id/banding_tel_phone"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30" />

            <Button
                android:id="@+id/binding_validate"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/setbtn_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/txt_send_check"
                android:textColor="@drawable/text_state_whitetogreen"

                android:textSize="@dimen/textsize_28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/line_color_in" />

        <EditText
            android:id="@+id/banding_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="验证码"
                android:textColor="@color/text_gray_lable"
                android:textSize="@dimen/textsize_30" />

            <EditText
                android:id="@+id/binding_security_code"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="6位数字"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_gray_lable"
                android:textColorHint="@color/line_color_out"
                android:textSize="@dimen/textsize_30" />

        </LinearLayout>

        <View
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_out" />

    </LinearLayout>

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/binding_submit"
        style="@style/AppBtn"
        android:text="@string/btn_submit"
        android:textSize="@dimen/textsize_32" />
</LinearLayout>
